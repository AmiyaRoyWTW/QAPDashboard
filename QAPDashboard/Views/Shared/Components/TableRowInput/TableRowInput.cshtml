@model QAPDashboard.Views.Shared.Components.TableRowInput.TableRowInputViewModel

<input
@{
  var className="";
  @if (!Model.Enabled)
  {
    className="w-full rounded-lg p-2 transition-colors duration-300 focus:border-blue-300 focus:outline-none border-none cursor-not-allowed";
  }
  else
  {
    className="w-full rounded-lg p-2 transition-colors duration-300 focus:border-blue-300 focus:outline-none border-none";
  }
}
id="@Model.Id" name="@Model.Name" type="text"
  class="@className"
  value="@Model.Value" @(Model.Enabled ? "" : "disabled") @(!Model.Hidden ? "" : "hidden")/>
