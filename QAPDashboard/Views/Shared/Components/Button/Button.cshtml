@model QAPDashboard.Views.Shared.Components.Button.ButtonViewModel

@{
    if (String.IsNullOrEmpty(Model.Label))
    {
        <button id="@Model.Id" name="@Model.Name" type="@Model.Type" class="@Model.TailwindClasses border-blue-00 rounded-md border bg-white px-4 py-2 font-semibold text-blue-700 transition-colors duration-300 hover:border-blue-200">@Model.Text</button>
    }
    else
    {
        <label for="@Model.Id" class="block text-sm font-medium text-gray-700 lg:mb-2">@Model.Label</label>
        <button id="@Model.Id" name="@Model.Name" type="@Model.Type" class="@Model.TailwindClasses border-blue-00 mb-4 mr-2 rounded-md border bg-white px-4 py-2 font-semibold text-gray-700 transition-colors duration-300 hover:border-blue-200 whitespace-nowrap">@Model.Text</button>
    }
}
